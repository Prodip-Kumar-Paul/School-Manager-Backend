{
  "name": "sm-backend",
  "version": "1.0.0",
  "description": "school manager backend",
  "main": "server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc && node build/server.js",
    "start": "nodemon ./src/server.ts",
    "start:dev": "SET NODE_ENV=dev & nodemon --watch src/**/* -e ts,json --exec node --inspect -r ts-node/register ./src/server.ts",
    "start:prod": "SET NODE_ENV=prod & npm run build",
    "prepare": "husky install"
  },
  "keywords": [
    "school manager",
    "backend"
  ],
  "author": "Developer",
  "license": "ISC",
  "dependencies": {
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/hpp": "^0.2.2",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.21",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "express-rate-limit": "^6.3.0",
    "express-validator": "^6.14.0",
    "helmet": "^5.0.2",
    "hpp": "^0.2.3",
    "morgan": "^1.10.0",
    "pg": "^8.7.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.18.0",
    "xss-clean": "^0.1.1"
  },
  "devDependencies": {
    "eslint": "^8.13.0",
    "husky": "^7.0.0",
    "lint-staged": "^12.3.7",
    "nodemon": "^2.0.15",
    "prettier": "^2.6.2",
    "ts-node": "^10.7.0"
  },
  "lint-staged": {
    "*.ts?(x)": "eslint . --ext .js,.jsx,.ts,.tsx",
    "*.{ts,tsx,css}": "prettier --config prettier.config.js --write",
    "*.{ts,tsx}": "prettier --write"
  }
}
